# Database
DATABASE_URL=postgresql://platform:platform@localhost:5432/platform

# Port Configuration (for worktrees, set PORT_OFFSET to 100, 200, etc.)
PORT_OFFSET=0
API_PORT=3000
DASHBOARD_PORT=5000
TRADING_SERVER_PORT=3001
TRADING_CLIENT_PORT=5001

# URL Configuration (auto-derived from ports if not set)
API_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:5000
TRADING_SERVER_URL=http://localhost:3001
TRADING_CLIENT_URL=http://localhost:5001

# Auth
BETTER_AUTH_SECRET=your-secret-here
BETTER_AUTH_URL=http://localhost:3000
CLIENT_URL=http://localhost:5000
APP_ENV=development

# Additional CORS origins (comma-separated)
CLIENT_URLS=

# Platform API URL (for CLI and clients)
PLATFORM_API_URL=http://localhost:3000
