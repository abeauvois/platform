{
    "name": "@platform/sdk",
    "version": "0.0.1",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm && tsc --emitDeclarationOnly --declaration",
        "dev": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --watch",
        "test": "bun test",
        "test:unit": "bun test ./tests/unit",
        "test:integration": "bun test ./tests/integration"
    },
    "dependencies": {
        "@platform/domain": "workspace:*"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5.0.0"
    }
}