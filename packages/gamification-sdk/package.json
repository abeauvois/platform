{
  "name": "@platform/gamification-sdk",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --format esm && tsc --emitDeclarationOnly --declaration",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --format esm --watch",
    "test": "bun test"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abeauvois/platform.git",
    "directory": "packages/gamification-sdk"
  },
  "dependencies": {
    "@platform/gamification-domain": "^1.0.0",
    "@platform/sdk": "^0.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
