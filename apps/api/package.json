{
  "name": "api",
  "scripts": {
    "dev": "bun --bun run --watch server/index.ts",
    "build": "bun build ./server/index.ts --outdir ./dist --target bun --external puppeteer-core",
    "start": "bun run ./dist/index.js",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/zod-validator": "^0.7.2",
    "zod": "^4.3.6",
    "@abeauvois/platform-auth": "workspace:*",
    "@abeauvois/platform-browser-scraper": "workspace:*",
    "@abeauvois/platform-env": "workspace:*",
    "@abeauvois/platform-cached-http-client": "workspace:*",
    "@abeauvois/platform-db": "workspace:*",
    "@abeauvois/platform-domain": "workspace:*",
    "@abeauvois/platform-task": "workspace:*",
    "@abeauvois/platform-utils": "workspace:*",
    "hono": "^4.8.12",
    "pg": "^8.16.3",
    "puppeteer-core": "^24.35.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1"
  },
  "version": "1.6.0"
