      "@abeauvois/platform-domain": ["../../packages/platform-domain/src/index.ts"],
      "@abeauvois/platform-cached-http-client": ["../../packages/cached-http-client/src/index.ts"],
      "@abeauvois/platform-browser-scraper": ["../../packages/browser-scraper/src/index.ts"],
      "@abeauvois/platform-task": ["../../packages/platform-task/src/index.ts"],
      "@abeauvois/platform-env": ["../../packages/platform-env/src/index.ts"]
