# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/platform_db

# Application environment
APP_ENV=development

# Server ports (optional - have defaults)
PORT=3002
GAMIFICATION_API_PORT=3002
GAMIFICATION_API_URL=http://localhost:3002

# Auth (required - must match API server for session sharing)
BETTER_AUTH_SECRET=your-auth-secret-here
BETTER_AUTH_URL=http://localhost:3000

# Client URLs (optional - have defaults)
CLIENT_URL=http://localhost:5000
TRADING_CLIENT_URL=http://localhost:5001
API_URL=http://localhost:3000
TRADING_SERVER_URL=http://localhost:3001

# Stripe (required for payment processing)
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
