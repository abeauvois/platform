{
  "name": "trading-server",
  "scripts": {
    "dev": "bun --bun run --hot index.ts",
    "build": "bun build ./index.ts --outdir ./dist --target bun",
    "start": "bun run ./dist/index.js",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3001/api/auth/reference",
    "docker:build": "docker build -t trading-server .",
    "docker:run": "docker run -p 3001:3001 --env-file .env -e DATABASE_URL='postgresql://user:password@host.docker.internal:5432/trading_db' trading-server"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.2",
    "@platform/auth": "workspace:*",
    "@platform/env": "workspace:*",
    "@platform/db": "workspace:*",
    "@platform/trading-domain": "workspace:*",
    "@platform/gamification-sdk": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.25",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.8.12",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
